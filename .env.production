# MilitaryLegalShield Production Environment Configuration

# Application Configuration
NODE_ENV=production
REPL_ID=militarylegalshield-production
REPLIT_DOMAINS=militarylegalshield.com,www.militarylegalshield.com

# Database Configuration (Supabase Production)
DATABASE_URL=${DATABASE_URL}

# Authentication & Security
SESSION_SECRET=${SESSION_SECRET}
ISSUER_URL=https://replit.com/oidc

# Search Engine Verification
GOOGLE_SITE_VERIFICATION=MLS-1750440524423-PROD
BING_SITE_VERIFICATION=MLS-BING-1750440524423
YANDEX_SITE_VERIFICATION=MLS-YANDEX-1750440524423

# Analytics Configuration
VITE_GA_MEASUREMENT_ID=${VITE_GA_MEASUREMENT_ID}
FACEBOOK_PIXEL_ID=${FACEBOOK_PIXEL_ID}
LINKEDIN_PARTNER_ID=${LINKEDIN_PARTNER_ID}

# API Keys
OPENAI_API_KEY=${OPENAI_API_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
VITE_STRIPE_PUBLIC_KEY=${VITE_STRIPE_PUBLIC_KEY}

# Twilio Configuration
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# CDN & Performance
CLOUDFLARE_ZONE_ID=${CLOUDFLARE_ZONE_ID}
CLOUDFLARE_API_TOKEN=${CLOUDFLARE_API_TOKEN}
CDN_DOMAIN=militarylegalshield.com

# Monitoring & Logging
SENTRY_DSN=${SENTRY_DSN}
LOG_LEVEL=info
PERFORMANCE_MONITORING=enabled

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_DOCUMENT_GENERATION=true
ENABLE_EMERGENCY_CONSULTATION=true
ENABLE_ATTORNEY_MATCHING=true
ENABLE_PAYMENT_PROCESSING=true

# Rate Limiting
API_RATE_LIMIT=1000
CONSULTATION_RATE_LIMIT=100
DOCUMENT_GENERATION_LIMIT=500

# Security Headers
ENABLE_CORS=true
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true

# Military Compliance
OPSEC_COMPLIANCE=enabled
MILITARY_VERIFICATION=enabled
SECURITY_CLEARANCE_CHECKS=enabled

# Backup & Recovery
AUTOMATED_BACKUPS=enabled
BACKUP_RETENTION_DAYS=30
DISASTER_RECOVERY=enabled